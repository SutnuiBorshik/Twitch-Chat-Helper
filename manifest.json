{
  "name": "Twitch Chat Helper",
  "short_name": "TCH",
  "version": "1.3",
  "description": "Allows to highlight chat messages of selected user, change chat font size and more.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "https://*.twitch.tv/",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [ "sounds/*.mp3" , "sounds/*.ogg"],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+Q"
      }
    }
  },
  "manifest_version": 2
}
